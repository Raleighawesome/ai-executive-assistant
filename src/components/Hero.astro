---

<section class="relative pt-8 pb-20 overflow-hidden">
  <!-- Background grid pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-30"></div>

  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-background via-background/95 to-background"></div>

  <!-- Accent glow -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-accent/20 rounded-full blur-3xl"></div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-text-primary mb-6 tracking-tight">
      Your AI-Powered<br />
      <span class="text-accent">Executive Assistant</span>
    </h1>

    <p class="text-lg sm:text-xl text-text-secondary max-w-2xl mx-auto mb-10">
      Automate meeting summaries, search your knowledge base, and prep for every meeting — all running locally on your machine.
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="/docs" class="btn-primary text-lg px-8 py-4">
        Get Started
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <button id="consulting-btn" class="btn-secondary text-lg px-8 py-4">
        Work With Me
      </button>
    </div>

    <!-- Terminal mockup -->
    <div class="mt-16 max-w-3xl mx-auto">
      <div class="card overflow-hidden">
        <div class="flex items-center gap-2 pb-4 border-b border-border">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
          <span class="ml-4 text-text-muted text-sm font-mono">ai-assistant</span>
        </div>
        <div class="pt-4 font-mono text-sm text-left">
          <div class="text-text-muted">$ python process_meeting.py "Staff Meeting.md"</div>
          <div class="mt-2 text-text-secondary">
            <span class="text-green-400">✓</span> Generated executive summary
          </div>
          <div class="text-text-secondary">
            <span class="text-green-400">✓</span> Extracted 5 action items
          </div>
          <div class="text-text-secondary">
            <span class="text-green-400">✓</span> Updated frontmatter tags
          </div>
          <div class="text-text-secondary">
            <span class="text-green-400">✓</span> Archived transcript
          </div>
          <div class="mt-2 text-accent">Ready for your next meeting.</div>
        </div>
      </div>
    </div>
  </div>
</section>
