<section id="consulting" class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-4">
        Need Help Setting Up?
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        Get personalized guidance to build your AI-powered workflow. I'll help you customize the system for your specific needs.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 mb-12">
      <!-- Discovery Call -->
      <div class="card text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">Discovery Call</h3>
        <p class="text-text-secondary text-sm">
          A focused conversation to understand your workflow and identify the best automation opportunities.
        </p>
      </div>

      <!-- Custom Strategy -->
      <div class="card text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">Custom Strategy</h3>
        <p class="text-text-secondary text-sm">
          A tailored implementation plan designed specifically for your tools, team size, and goals.
        </p>
      </div>

      <!-- Hands-On Support -->
      <div class="card text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">Hands-On Support</h3>
        <p class="text-text-secondary text-sm">
          I'll work alongside you to set up, configure, and optimize your entire AI assistant system.
        </p>
      </div>
    </div>

    <div class="card max-w-xl mx-auto text-center">
      <p class="text-text-muted text-sm mb-4">
        Limited availability for consulting engagements
      </p>
      <a
        href="/consulting"
        class="btn-primary inline-flex items-center text-lg px-8 py-4"
      >
        Let's Talk
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Connect the "Work With Me" button in Hero to scroll here
  document.getElementById('consulting-btn')?.addEventListener('click', () => {
    document.getElementById('consulting')?.scrollIntoView({ behavior: 'smooth' });
  });
</script>
